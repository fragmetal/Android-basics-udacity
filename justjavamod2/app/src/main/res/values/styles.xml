<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">#E91E63</item>
        <item name="colorPrimaryDark">#C2185B</item>
        <item name="colorAccent">#F50057</item>
        <item name="actionBarStyle">@style/MyActionBar</item>
        <item name="android:textColorPrimary">@android:color/white</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:colorBackground">@color/background_material_light</item>
    </style>

    <style name="MyActionBar" parent="@style/Widget.AppCompat.ActionBar.Solid">
        <item name="titleTextStyle">@style/MyTitleTextStyle</item>
    </style>

    <style name="MyTitleTextStyle" parent="@style/TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textColor">#FFFFFF</item>
    </style>

    <style name="AppIncrementButton" parent="@style/Widget.AppCompat.Button.Colored">
        <item name="colorButtonNormal">#617D8A</item>
        <item name="android:textColor">#EDBA3E</item>
    </style>

    <style name="AppDecrementButton" parent="@style/Widget.AppCompat.Button.Colored">
        <item name="colorButtonNormal">#617D8A</item>
        <item name="android:textColor">#EDBA3E</item>
    </style>

    <style name="AppOrderButton" parent="@style/Widget.AppCompat.Button.Colored">
        <item name="colorButtonNormal">#07AAF6</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="AppFieldColor">
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="HeaderTextStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">16dp</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">#66688e</item>
    </style>

</resources>
